<div class="imageLogin">
  <%= image_tag("runners_dark.png", class:"ui fluid image") %> 
  <div class="loginBlock">
  
    <div class="ui grid">
      <div class="one wide column"></div>
      <div class="five wide column center aligned">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui.large.form'}) do |f| %>
          <div class="ui stacked segment loginBlock">
            <div class="content">
              <h2 class="ui green image header">
                  <%= image_tag("runner_icon.png", class:"image") %> 
                <div>
                  <p class="headerLogin">Log-in to your account</p>
                </div>
              </h2>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                  <%= f.email_field :email, :placeholder => "Email address", autofocus: true %>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                  <%= f.password_field :password, :placeholder => "Password", autocomplete: "off" %>
              </div>
            </div>
            <div class="field">
               <% if devise_mapping.rememberable? -%>
               <%= f.check_box :remember_me%>
               <%= f.label :remember_me %>
               <% end -%>
            </div>
            <div class="field">
              <%= f.submit "Log in", :class => 'ui fluid large pink submit button'%>
            </div>
            <div class="field">
                <%= render 'layouts/messages' %>
                <%= render "devise/shared/links" %>
            </div>
          </div> <!-- end ui stacked segment loginBlock -->
          <div class="ui message moreOptions">
             New to us? <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
             <%= link_to "Sign up", new_registration_path(resource_name) %>
             <% end -%>
          </div>
          <% end %>
        </div> <!-- end five wide  -->
      <div class="one wide column"></div>
    </div> <!-- end ui grid  -->

  </div> <!-- end login block -->
</div>


